// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// creating a new model: represents a table in the database
model User {
  // @id: primary key and uuid as default value
  id            String   @id @default(uuid())
  email         String   @unique
  name          String
  password_hash String
  created_at    DateTime @default(now())

  // it's not a field in the database, but a relation -> only to prisma to know how to handle the data
  // only primary parameter will be stored in the database
  checkIns CheckIn[]

  // change the table's name
  @@map("users")
}

model CheckIn {
  id           String    @id @default(uuid())
  created_at   DateTime  @default(now())
  validated_at DateTime?

  user    User   @relation(fields: [user_id], references: [id])
  user_id String

  gym    Gym    @relation(fields: [gym_id], references: [id])
  gym_id String

  @@map("check_ins")
}

model Gym {
  id          String  @id @default(uuid())
  title       String
  // optional field
  description String?
  phone       String?
  latitude    Decimal
  longitude   Decimal

  checkIns CheckIn[]

  @@map("gyms")
}
